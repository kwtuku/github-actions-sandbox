= form_for article do |f|
  - if article.errors.any?
    #error-explanation
      %h2 #{pluralize(article.errors.count, 'error')} prohibited this article from being saved:
      %ul
        - article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
